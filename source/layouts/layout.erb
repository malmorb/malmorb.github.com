<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta property="og:title" content="Malmö Ruby Group"/>
    <meta property="og:site_name" content="Malmö Ruby Group"/>
    <meta property="og:url" content="http://malmorb.se"/>
    <meta property="og:image" content="<%= asset_url('images/avatar.png')%>"/>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Malmö.rb" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
